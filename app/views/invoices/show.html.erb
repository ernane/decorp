<h3 class="page-header">Invoice <%= @invoice.number %> - TOTAL <%= @invoice.total %></h3>

<div class="row">
<div class="col-md-9 col-md-offset-1">
    <table class="table table-hover table-bordered table-striped table-condensed" id="items-table", data-source="<%= items_path(format: :json, number: @invoice.id) %>">
      <thead>
        <tr>
          <th>Item</th>
          <th>Value</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>
</div>



<h2>Import Items</h2>
<%= form_tag import_user_invoices_path(@user, number: @invoice.id), multipart: true do %>
<%= file_field_tag :file %>
<%= submit_tag "Import" %>
<% end %>

